
provider "azurerm" {
  features {}
}

resource "azurerm_resource_group" "test" {
  name     = "acctestRG-aks-240105060517924158"
  location = "West Europe"
}

resource "azurerm_kubernetes_cluster" "test" {
  name                    = "acctestaks240105060517924158"
  location                = azurerm_resource_group.test.location
  resource_group_name     = azurerm_resource_group.test.name
  dns_prefix              = "acctestaks240105060517924158"
  private_cluster_enabled = false

  linux_profile {
    admin_username = "acctestuser240105060517924158"

    ssh_key {
      key_data = "ssh-rsa  terraform@demo.tld"
    }
  }

  default_node_pool {
    name       = "default"
    node_count = 1
    vm_size    = "Standard_DS2_v2"
  }

  identity {
    type = "SystemAssigned"
  }

  network_profile {
    network_plugin    = "kubenet"
    load_balancer_sku = "standard"
  }
}
