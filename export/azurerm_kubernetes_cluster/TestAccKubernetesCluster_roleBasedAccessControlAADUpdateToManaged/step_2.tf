
variable "tenant_id" {
  default = ""
}

resource "azurerm_resource_group" "test" {
  name     = "acctestRG-aks-221221204115032267"
  location = "West Europe"
}

resource "azurerm_kubernetes_cluster" "test" {
  name                = "acctestaks221221204115032267"
  location            = "${azurerm_resource_group.test.location}"
  resource_group_name = "${azurerm_resource_group.test.name}"
  dns_prefix          = "acctestaks221221204115032267"

  linux_profile {
    admin_username = "acctestuser221221204115032267"

    ssh_key {
      key_data = "ssh-rsa  terraform@demo.tld"
    }
  }

  default_node_pool {
    name       = "default"
    node_count = 1
    vm_size    = "Standard_DS2_v2"
  }

  identity {
    type = "SystemAssigned"
  }

  azure_active_directory_role_based_access_control {
    tenant_id          = var.tenant_id
    managed            = true
    azure_rbac_enabled = false
  }
}
